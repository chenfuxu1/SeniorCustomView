<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <!--设置控件占整个布局的百分比-->
    <!--layout_constraintWidth_percent 宽度-->
    <!--layout_constraintHeight_percent 高度-->
    <!--layout_constraintGuide_percent 相对于某条线-->

    <!--app:layout_constraintWidth_percent="0.3" 表示 view 的宽度是整个布局的 0.3 倍-->
    <View android:id="@+id/view_one"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="#ffff00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <!--app:layout_constraintWidth_percent="0.5" 表示 view 的宽度是整个布局的 0.5 倍-->
    <View android:id="@+id/view_two"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="#ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>