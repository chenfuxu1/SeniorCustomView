<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.example.seniorcustomview.customview5.view.animset.AnimSetLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b2b2b" >

        <com.example.seniorcustomview.customview5.view.animset.AnimSetView
            android:id="@+id/anim_set_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView android:id="@+id/anim_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="开始动画"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.example.seniorcustomview.customview5.view.animset.AnimSetLayout>


</androidx.constraintlayout.widget.ConstraintLayout>